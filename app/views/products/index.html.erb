<p style="color: green"><%= notice %></p>

<h1>Products</h1>
<div class="item-wrapper">
  <table id="products">
    <tr>
      <th>#</th>
      <th>name</th>
      <th>categories</th>
      <th>actions</th>
    </tr>
    <% @products.each_with_index do |product, i| %>
      <%= render product, order: @offset+(i+1) %>
    <% end %>
  </table>
</div>
<div class="pagination-wrapper">
  <% @pageList.each do |page_num| %>
    <div class="page">
      <%= link_to "#{page_num}", "#{products_path}?page=#{page_num}", { class: "empty-style-link-to page-cursor"} %>
    </div>
  <% end %>
</div>
<div class="button-wrapper">
  <div class="button-box long-button-width">
    <%= link_to "New product", new_product_path, { class: "empty-style-link-to"} %>
  </div>
  <div class="button-box long-button-width">
    <%= link_to "Categories", categories_path, { class: "empty-style-link-to"} %>
  </div>
</div>
